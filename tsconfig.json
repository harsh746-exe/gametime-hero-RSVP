{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./rsvp-demo/src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["rsvp-demo/src/*"]
    }
  },
  "include": ["rsvp-demo/src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 